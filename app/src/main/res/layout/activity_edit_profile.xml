<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.complus.community.EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:padding="5dp"
                android:paddingTop="10dp"
                android:textColor="#000000"
                app:mtf_openKeyboardOnFocus="true"
                fbutton:met_floatingLabel="highlight"
                fbutton:met_iconLeft="@drawable/ic_person_black_24dp" />


            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number"
                android:padding="5dp"
                android:textColor="#000000"
                app:mtf_openKeyboardOnFocus="true"
                fbutton:met_floatingLabel="highlight"
                fbutton:met_iconLeft="@drawable/ic_contact_phone_black_24dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:padding="5dp"
                android:textColor="#000000"
                app:mtf_openKeyboardOnFocus="true"
                fbutton:met_floatingLabel="highlight"
                fbutton:met_iconLeft="@drawable/ic_location_on_black_24dp" />

            <com.rengwuxian.materialedittext.MaterialEditText
                android:id="@+id/et_pincode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pin Code"
                android:padding="5dp"
                android:textColor="#000000"
                app:mtf_openKeyboardOnFocus="true"
                fbutton:met_floatingLabel="highlight"
                fbutton:met_iconLeft="@drawable/ic_fiber_pin_black_24dp" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_editprofile"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:elevation="2dp"
                    android:background="@color/colorAccent"
                    android:text="Edit Profile"
                    android:textColor="#ffffff" />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
